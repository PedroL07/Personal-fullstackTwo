<!doctype html>
<html>
<head>
    <title>Maintenance Log</title>

    <link rel="stylesheet" href="font-awesome.min.css">
    <script src="https://kit.fontawesome.com/fe55a8ead5.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="design.css">
</head>
<body>
  <form action="/logout">
    <input class="leave" type="submit" value="Clock Out" />
</form>
<div class="container">

    <div class="keys">
        <h3>Emoji Key</h3>
        <p><i class="fa fa-trash" aria-hidden="true"></i> - Delete log</p>
        <p><i class="fa-solid fa-check"></i> - Cross out log</p>
        <p><i class="fa-regular fa-face-frown"> - Low priority</i></p>
        <p><i class="fa-solid fa-face-sad-tear"> - Medium priority</i></p>
        <p><i class="fa-solid fa-face-sad-cry"> - High priority</i></p>
        <!-- <a href="/logout" class="btn btn-default btn-sm">Logout</a> -->
    </div>

    <div class="forms">
    <% if (user.local.email) { %>
        <form action="/messages" method="POST">
          <input type="text" placeholder="Name" name="name">
          <input type="text" placeholder="Unit #" name="location">
          <input type="date" value="2022-11-12T20:20" name="date">
          <input type="tel" placeholder="Best # to Call" name="cell">
          <textarea placeholder="What's the issue" name="msg"></textarea>      
          <button type="submit">submit</button>
        </form>
        <% } %>
      </div>
            <h3>Log:</h3>
            <ul class="messages">
            <% for(var i=0; i<messages.length; i++) {%>
              <li class="message <%= messages[i].completed ? 'strike' : '' %>
                <%= messages[i].blue ? 'blueS' : '' %>
                <%= messages[i].yellow ? 'yellowS' : '' %>
                <%= messages[i].red ? 'redS' : '' %>
                ">
                <span>Hello,</span>1
                <span class="nameS"><%= messages[i].name %></span>3
                <span>thanks for letting us know about the issue in unit</span>5
                <span class="locationS"><%= messages[i].location %></span>
                <span>that happended on</span>
                <span class="dateS"><%= messages[i].date %></span>
                <span>We will call you at</span>
                <span class="cellS"><%= messages[i].cell %></span>
                <span>very soon, to find out more about the :</span>
                <span class="msgS"><%= messages[i].msg %></span>
                <span><i class="fa fa-trash" aria-hidden="true"></i></span>
                <span><i class="fa-solid fa-check"></i></span>
                <span><i class="fa-regular fa-face-frown"></i></span>
                <span><i class="fa-solid fa-face-sad-tear"></i></span>
                <span><i class="fa-solid fa-face-sad-cry"></i></span>
              </li>
            <% } %>
            </ul>


</div>

<script src="main.js"></script>

</body>
</html>


